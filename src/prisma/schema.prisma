generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id           String    @id @default(uuid())
  email        String    @unique
  name         String
  created_at   String
  updated_at   String
  away_matches Matches[] @relation("awayUserToMatch")
  home_matches Matches[] @relation("homeUserToMatch")
}

model Matches {
  id           String @id @default(uuid())
  home_score   Int
  away_score   Int
  date         String
  away_user_id String
  home_user_id String
  away_user    User   @relation("awayUserToMatch", fields: [away_user_id], references: [id], map: "away_match_fk")
  home_user    User   @relation("homeUserToMatch", fields: [home_user_id], references: [id], map: "home_match_fk")
}
