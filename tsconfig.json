{
    "compilerOptions": {
       "lib": [
          "es6"
       ],
       "types": [
        "node"
       ],
       "target": "es6",
       "moduleResolution": "node",
       "outDir": "dist",
       "resolveJsonModule": true,
       "emitDecoratorMetadata": true,
       "esModuleInterop": true,
       "experimentalDecorators": true,
       "sourceMap": true,
       
    },
    "include": ["src/**/*.ts", "*.ts"],
    "exclude": ["node_modules", "**/*.spec.ts"]
 }