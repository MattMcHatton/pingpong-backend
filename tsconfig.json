{
    "compilerOptions": {
      "rootDir": "src",
       "lib": [
          "es6"
       ],
       "types": [
        "node",
       ],
       "target": "ES6",
       "moduleResolution": "node",
       "module": "commonjs",
       "outDir": "dist",
       "resolveJsonModule": true,
       "isolatedModules": true,
       "emitDecoratorMetadata": true,
       "esModuleInterop": true,
       "experimentalDecorators": true,
       "sourceMap": true,
       "jsx": "preserve",
       
    },
    "include": ["src/**/*.ts", "**/*.ts", "*.ts"],
    "exclude": ["node_modules", "**/*.spec.ts"]
 }